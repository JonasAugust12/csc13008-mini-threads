<div class="search-box">
    <div class="search-box__bar">
        <label class="search-box__input-wrapper">
            <div class="search-box__icon">
                <svg aria-label="Search" role="img" viewBox="0 0 26 26">
                    <path
                        clip-rule="evenodd"
                        d="M3.5 11.5C3.5 7.08172 7.08172 3.5 11.5 3.5C15.9183 3.5 19.5 7.08172 19.5 11.5C19.5 15.9183 15.9183 19.5 11.5 19.5C7.08172 19.5 3.5 15.9183 3.5 11.5ZM11.5 1C5.70101 1 1 5.70101 1 11.5C1 17.299 5.70101 22 11.5 22C13.949 22 16.2023 21.1615 17.9883 19.756L22.3661 24.1339C22.8543 24.622 23.6457 24.622 24.1339 24.1339C24.622 23.6457 24.622 22.8543 24.1339 22.3661L19.756 17.9883C21.1615 16.2023 22 13.949 22 11.5C22 5.70101 17.299 1 11.5 1Z"
                        fill="#7e7e7e"
                        fill-rule="evenodd"
                    ></path>
                </svg>
            </div>
            <input type="search" class="search-box__input" placeholder="Search" autocapitalize="off" autocomplete="off" spellcheck="false" dir="ltr" />
            <button type="button" class="search-box__clear-btn">
                <svg aria-label="Clear" role="img" viewBox="0 0 24 24">
                    <title>Clear</title>
                    <path
                        d="M12 0a12 12 0 1 0 12 12A12 12 0 0 0 12 0Zm5.139 16.056a.766.766 0 1 1-1.083 1.083L12 13.083 7.944 17.14a.766.766 0 0 1-1.083-1.083L10.917 12 6.86 7.944a.766.766 0 0 1 1.083-1.083L12 10.917l4.056-4.056a.766.766 0 0 1 1.083 1.083L13.083 12Z"
                    ></path>
                </svg>
            </button>
        </label>
    </div>
</div>

<div class="suggestion-box">
    <div class="suggestion-box__heading">
        <span class="suggestion-box__title">Follow suggestions</span>
    </div>
    <% if (users.length > 0) { %>
        <% users.forEach(user => { %>
            <div class="user-profile">
                <div class="user-profile__avatar">
                    <div class="user-profile__avatar-wrapper">
                        <img class="user-profile__avatar-img" src="<%= user.avatar %>" alt="<%= user.username %>'s profile picture">
                    </div>
                </div>
                <div class="user-profile__info">
                    <div class="user-profile__info-wrapper">
                        <div class="user-profile__details">
                            <div class="user-profile__username">
                                <a class="user-profile__username-link" href=""><%= user.username %></a>
                            </div>
                            <div class="user-profile__name">
                                <span class="user-profile__name-text"><%= user.name %></span>
                            </div>
                        </div>
                        <button type="button" class="user-profile__follow-btn">
                            <div class="user-profile__follow-btn-label">Follow</div>
                        </button>
                    </div>
                    <div class="user-profile__followers">
                        <div class="user-profile__followers-wrapper">
                            <span class="user-profile__followers-count"><%= user.followers %> followers</span>
                        </div>
                    </div>
                </div>
            </div>
        <% }); %>
    <% } else { %>
        <div>No results found.</div>
    <% } %>
</div>

<script src="js/search.js"></script>