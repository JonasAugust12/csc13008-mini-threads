<!-- Modal Popup -->
<div id="modal-popup" class="hidden z-10" style="
        position: fixed; 
        width: 100%;
        bottom: 36px;

        display: flex; 
        justify-content: center; 
        align-items: center; 
        opacity: 0; 
        transform: translateY(100%); 
        transition: opacity 0.5s ease-out, transform 0.5s ease-out;">
    <div style="
            background-color: white; 
            padding: 20px; 
            border-radius: 8px; 
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); 
            width: auto; 
            max-width: 90%; 
            position: relative;
            text-align: center;">
        <p id="modal-message" style="color: black; margin: auto; font-weight: bold;"></p>
    </div>
</div>