    <script src="/Js/layout.js"></script>
    <script src="/Js/index.js"></script>
    <script src="/Js/profile.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const intro = document.querySelector('.intro');
            const introLogo = document.querySelector('.intro-logo');
            const introTextTitle1 = document.querySelector('.intro_text_title1');
            const introTextTitle2 = document.querySelector('.intro_text_title2');

            const pageTitle = document.title;
            if (pageTitle === 'Mini Threads') {
                intro.classList.remove('hidden');

                setTimeout(() => {
                    introTextTitle1.classList.remove('text-black');
                    introTextTitle1.classList.add('animate-fadeInDrop');
                }, 0); // Hiệu ứng bắt đầu ngay lập tức

                setTimeout(() => {
                    introTextTitle2.classList.remove('text-black');
                    introTextTitle2.classList.add('animate-fadeInDrop');
                }, 400); // Hiệu ứng bắt đầu sau 400ms

                setTimeout(() => {

                    intro.classList.add('animate-zoomOutFade');


                }, 1000); // Hiệu ứng bắt đầu sau 1 giây

                setTimeout(() => {
                    intro.classList.add('hidden');
                }, 2000);
            }
            // intro.addEventListener('animationend', () => {
            //     intro.style.display = 'none';
            // });

            appContainer = document.querySelector('.app-container');
            appContainer.classList.remove('hidden');


        });
    </script>
