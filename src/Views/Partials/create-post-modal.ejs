<div
    class="create-post-modal fixed top-0 left-0 w-screen min-h-screen bg-content-bg z-[4] text-primary-text hidden tbl:top-1/2 tbl:left-1/2 tbl:transform tbl:-translate-x-1/2 tbl:-translate-y-1/2 tbl:animate-zoomIn tbl:w-[620px] tbl:border-[0.5px] tbl:border-[#f3f5f726] tbl:rounded-2xl tbl:min-h-px">
    <div
        class="create-post__header grid px-6 h-14 grid-cols-[64px_minmax(0,1fr)_64px] items-center tbl:border-b-[0.5px] tbl:border-[#f3f5f726]">
        <button
            class="create-post__header__cancel-btn text-primary-text font-normal text-[16px] p-2 tbl:overflow-hidden">Cancel</button>
        <div class="create-post__header__title text-[16px] font-bold text-center">New thread</div>
        <div class="create-post__header__balance"></div>
    </div>
    <div class="create-post__content px-6 pt-3 pb-[5px]">
        <div class="create-post__info w-full h-auto flex">
            <div class="create-post__info-avatar w-12">
                <img class="create-post__info-avatar__img1 w-9 h-9 border-2 border-border-color rounded-full"
                    src="<%= avatarSrc  %>" alt="" />
            </div>
            <div class="create-post__info-post flex-grow">
                <div class="create-post__info-post__username text-[15px] font-user-weight">
                    <%= username %>
                </div>
                <textarea rows="4"
                    class="create-post__info-post__status w-full h-6 bg-transparent border-none outline-none text-white"
                    placeholder="What's new?"></textarea>
                <div
                    class="create-post__info-post__img mt-3 grid grid-rows-[minmax(0,1fr)] grid-cols-[minmax(0,1fr)] aspect-[1.3] relative w-auto h-auto overflow-hidden rounded-[8px] hidden">
                    <picture class="create-post__img-container select-none block relative ">
                        <img id="selectedImage" src="" alt=""
                            class="create-post__img h-[100%] w-auto object-cover rounded-[8px] absolute bottom-0 top-0 right-0 left-0 outline-[#f3f5f726]"
                            draggable="false">
                    </picture>
                    <button
                        class="create-post__info-post__remove-img top-[10px] right-[10px] absolute w-[26px] h-[26px] rounded-full cursor-pointer bg-[#0006] flex items-center justify-center">
                        <svg aria-label="Gỡ" role="img" viewBox="0 0 24 24"
                            class="h-[12px] w-[12px] stroke-[3] stroke-white"
                            style="--fill: currentColor; --height: 12px; --width: 12px;">
                            <title>Gỡ</title>
                            <polyline points="20.643 3.357 12 12 3.353 20.647"></polyline>
                            <line x1="20.649" x2="3.354" y1="20.649" y2="3.354"></line>
                        </svg>
                    </button>
                </div>
                <div class="create-post__utilities cursor-default select-none -ml-2">
                    <div
                        class="create-post__utilities-icon create-post__utilities-icon--media inline-flex items-center box-border w-9 h-9 px-2 cursor-pointer">
                        <svg aria-label="Attach media" role="img" viewBox="0 0 24 24" class="w-5 h-5">
                            <title>Attach media</title>
                            <g>
                                <path clip-rule="evenodd"
                                    d="M2.00207 9.4959C1.65132 7.00019 1.47595 5.75234 1.82768 4.73084C2.13707 3.83231 2.72297 3.05479 3.50142 2.50971C4.38639 1.89005 5.63425 1.71467 8.12996 1.36392L10.7047 1.00207C13.2004 0.651325 14.4482 0.47595 15.4697 0.827679C16.3682 1.13707 17.1458 1.72297 17.6908 2.50142C17.9171 2.82454 18.0841 3.19605 18.2221 3.65901C17.7476 3.64611 17.2197 3.64192 16.6269 3.64055C16.5775 3.5411 16.5231 3.44881 16.4621 3.36178C16.0987 2.84282 15.5804 2.45222 14.9814 2.24596C14.3004 2.01147 13.4685 2.12839 11.8047 2.36222L7.44748 2.97458C5.78367 3.20841 4.95177 3.32533 4.36178 3.73844C3.84282 4.10182 3.45222 4.62017 3.24596 5.21919C3.01147 5.90019 3.12839 6.73209 3.36222 8.3959L3.97458 12.7531C4.15588 14.0431 4.26689 14.833 4.50015 15.3978C4.50083 16.3151 4.50509 17.0849 4.53201 17.7448C4.13891 17.4561 3.79293 17.1036 3.50971 16.6991C2.89005 15.8142 2.71467 14.5663 2.36392 12.0706L2.00207 9.4959Z"
                                    stroke="none" fill="#777777" fill-rule="evenodd"></path>
                                <g>
                                    <g clip-path="url(#:r1c:)">
                                        <rect stroke="#777777" fill="none" height="15.5" rx="3.75" stroke-width="1.5"
                                            width="15.5" x="6.75" y="5.8894"></rect>
                                        <path
                                            d="M6.6546 17.8894L8.59043 15.9536C9.1583 15.3857 10.0727 15.3658 10.6647 15.9085L12.5062 17.5966C12.9009 17.9584 13.5105 17.9451 13.8891 17.5665L17.8181 13.6376C18.4038 13.0518 19.3536 13.0518 19.9394 13.6375L22.0663 15.7644"
                                            stroke="#777777" fill="none" stroke-linejoin="round" stroke-width="1.5">
                                        </path>
                                        <circle cx="10.75" cy="9.8894" fill="#777777" r="1.25"></circle>
                                    </g>
                                </g>
                            </g>
                            <defs>
                                <clipPath id=":r1c:">
                                    <rect fill="white" height="17" rx="4.5" width="17" x="6" y="5.1394"></rect>
                                </clipPath>
                            </defs>
                        </svg>
                        <input type="file" id="imageInput" class="hidden" accept="image/*">
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div
        class="create-post__footer fixed right-0 left-0 bottom-0 z-[3] p-[14px] flex justify-between tbl:relative tbl:p-6 tbl:block tbl:right-auto tbl:left-auto tbl:bottom-auto tbl:z-auto">
        <button class="create-post__footer__privacy flex-grow cursor-pointer relative text-left">
            <span class="create-post__footer__privacy-title w-full text-[15px] text-secondary-text">Anyone can
                reply & quote</span>

            <div
                class="create-post__privacy-list hidden absolute overflow-hidden bottom-full ml-[-9px] w-[200px] text-[15px] font-semibold text-primary-text bg-[#1e1e1e] rounded-2xl border-[1px] border-[#2d2d2d] shadow-[0_10.5px_21px_#00000014] tbl:p-2 tbl:bottom-auto tbl:top-full tbl:mt-1">
                <div
                    class="create-post__privacy-list__item cursor-pointer hover:bg-[#212121] p-4 border-b-[1px] border-[#2d2d2d] tbl:rounded-xl tbl:p-3 tbl:border-b-0">
                    Anyone
                </div>
                <div
                    class="create-post__privacy-list__item cursor-pointer hover:bg-[#212121] p-4 tbl:p-3 tbl:rounded-xl">
                    Profiles you follow
                </div>
            </div>
        </button>
        <button
            class="create-post__footer__post-btn h-9 cursor-not-allowed text-black font-semibold px-4 border-[1px] border-[#0006] rounded-[243px] bg-white opacity-30 tbl:absolute tbl:py-2 tbl:px-4 tbl:right-[26px] tbl:top-1/2 tbl:transform tbl:-translate-y-1/2 tbl:rounded-[10px] tbl:text-[14px] tbl:text-white tbl:bg-[#181818] tbl:cursor-not-allowed tbl:border-[#f3f5f726] tbl:overflow-hidden"
            type="submit">
            Post
        </button>
    </div>
</div>