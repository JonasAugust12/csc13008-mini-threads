<div class="search-wrapper relative w-full h-full">
    <div class="search-box w-full">
        <div class="search-box__bar flex w-full p-[12px_16px_13px] box-border items-center justify-center bg-content-bg tbl:bg-transparent">
            <label class="search-box__input-wrapper flex w-full p-[12px_16px] items-center border border-[#353636] rounded-[16px] h-[44px] bg-black">
                <div class="search-box__icon p-2">
                    <svg aria-label="Search" role="img" viewBox="0 0 26 26" class="w-4 h-4 fill-[#7e7e7e]">
                        <path
                            clip-rule="evenodd"
                            d="M3.5 11.5C3.5 7.08172 7.08172 3.5 11.5 3.5C15.9183 3.5 19.5 7.08172 19.5 11.5C19.5 15.9183 15.9183 19.5 11.5 19.5C7.08172 19.5 3.5 15.9183 3.5 11.5ZM11.5 1C5.70101 1 1 5.70101 1 11.5C1 17.299 5.70101 22 11.5 22C13.949 22 16.2023 21.1615 17.9883 19.756L22.3661 24.1339C22.8543 24.622 23.6457 24.622 24.1339 24.1339C24.622 23.6457 24.622 22.8543 24.1339 22.3661L19.756 17.9883C21.1615 16.2023 22 13.949 22 11.5C22 5.70101 17.299 1 11.5 1Z"
                            fill-rule="evenodd">
                        </path>
                    </svg>
                </div>
                <input
                    type="search"
                    class="search-box__input w-full h-full bg-black border-0 p-[1px_2px] text-[#f3f5f7] outline-none text-[15px] font-sans"
                    placeholder="Search"
                    autocapitalize="off"
                    autocomplete="off"
                    spellcheck="false"
                    dir="ltr"
                />
                <button
                    type="button"
                    class="search-box__clear-btn flex p-2 bg-transparent border-0 cursor-pointer hidden">
                    <svg aria-label="Clear" role="img" viewBox="0 0 24 24" class="h-4 w-4 fill-[#4d4d4d]">
                        <title>Clear</title>
                        <path
                            d="M12 0a12 12 0 1 0 12 12A12 12 0 0 0 12 0Zm5.139 16.056a.766.766 0 1 1-1.083 1.083L12 13.083 7.944 17.14a.766.766 0 0 1-1.083-1.083L10.917 12 6.86 7.944a.766.766 0 0 1 1.083-1.083L12 10.917l4.056-4.056a.766.766 0 0 1 1.083 1.083L13.083 12Z">
                        </path>
                    </svg>
                </button>
            </label>
        </div>
    </div>

    <div class="suggestion-box flex flex-col">
        <div class="suggestion-box__heading flex w-full px-6 pt-4 pb-1">
            <span class="suggestion-box__title block max-w-full font-semibold text-[#777777] leading-[1.4em] text-start">
                Follow suggestions
            </span>
        </div>


        <% if (users.length > 0) { %>
            <% users.forEach(user => { %>
                <%- include('search-user-profile', user) %>
            <% }); %>
        <% } else { %>
            <div class="text-center text-[#777777] p-4">No results found.</div>
        <% } %>
    </div>
</div>

<script src="/Js/search.js"></script>
